<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ResgisterSellerActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/crop_image_menu_rotate_left" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Register User"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btngps"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_my_location_24" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="40dp"
        android:padding="5dp"
        android:background="@drawable/shape_circle01"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/iconIv">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/Improfilee"
            android:layout_centerHorizontal="true"
            app:c_border="true"
            app:c_border_color="@color/colorPrimary"
            app:c_border_width="1dp"
            android:src="@drawable/ic_baseline_person_pin_24">

        </com.blogspot.atifsoftwares.circularimageview.CircularImageView>

        <EditText
            android:id="@+id/edName"
            android:layout_below="@+id/Improfilee"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textPersonName|textCapWords"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:background="@drawable/shape_recy02"
            />
        <EditText
            android:id="@+id/edshopName"
            android:layout_below="@+id/edName"
            android:hint="Shop Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textPersonName|textCapWords"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:background="@drawable/shape_recy02"
            />

        <EditText
            android:id="@+id/edPhone"
            android:layout_below="@+id/edshopName"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="phone"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:background="@drawable/shape_recy02"
            />
        <EditText
            android:id="@+id/edDilevery"
            android:layout_below="@+id/edPhone"
            android:hint="Dilevery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="phone"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:background="@drawable/shape_recy02"
            />
        <LinearLayout
            android:id="@+id/addRess"
            android:orientation="horizontal"
            android:layout_below="@id/edDilevery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edCountry"
                android:layout_below="@+id/edDilevery"
                android:hint="Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:background="@drawable/shape_recy02"
                />

            <EditText
                android:id="@+id/edCity"
                android:layout_below="@+id/edPhone"
                android:hint="City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:background="@drawable/shape_recy02"
                />
            <EditText
                android:id="@+id/edstate"
                android:layout_below="@+id/edPhone"
                android:hint="State"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:inputType="textPostalAddress"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                android:background="@drawable/shape_recy02"
                />

        </LinearLayout>
        <EditText
            android:id="@+id/edAddress"
            android:layout_below="@+id/addRess"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:background="@drawable/shape_recy02"
            />

        <EditText
            android:id="@+id/edEmail"
            android:layout_below="@+id/edAddress"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:background="@drawable/shape_recy02"
            />
        <EditText
            android:id="@+id/edPassword"
            android:layout_below="@+id/edEmail"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:background="@drawable/shape_recy02"
            />
        <EditText
            android:id="@+id/edCpPassword"
            android:layout_below="@+id/edPassword"
            android:hint="Cofim Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:inputType="textPassword"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:background="@drawable/shape_recy02"
            />


        <Button
            android:id="@+id/btnRegiter"
            style="@style/Widget.AppCompat.Button.Colored"
            android:minWidth="120dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edCpPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register" />
    </RelativeLayout>
</ScrollView>




</RelativeLayout>