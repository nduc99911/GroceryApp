<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.OrderDetailActivity">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/shape_rect01"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBack"
            android:background="@null"
            android:src="@drawable/ic_baseline_chevron_left_24"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageButton>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="Order Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:contentPadding="5dp">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:text="Order Id"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/TvOrderId"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:text="1212121212"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </TableRow>


    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Date"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvDate"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="06/07/2021"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Order Status"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvOrderStatus"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="Complete"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Shop Name"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvShopName"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="ABC Shop"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Items"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvTotalItem"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvAmount"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="#100"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:text="Delivery Address"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/TvDeliveryAdress"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="ABC city"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </TableRow>
</TableLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Order Item"
        android:textAlignment="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rvitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_order_item"
        />
</LinearLayout>