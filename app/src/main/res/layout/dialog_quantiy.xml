<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/ImProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/TvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ImProduct"
            android:layout_marginTop="5dp"
            android:text="Product Tittle"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/TvPQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TvTitle"
            android:layout_marginTop="5dp"
            android:text="Quantity"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/TvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TvPQuantity"
            android:layout_marginTop="5dp"
            android:text="Produc Description"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/TvdiscountNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="10% OFF"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect05"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/TvOrialPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="$12"
            android:textColor="@color/black"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/TvdiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toEndOf="@id/TvOrialPrice"
            android:text="$10"
            android:textColor="@color/black"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/TvFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:text="Final Price"
            android:textColor="@color/black"
            android:textAlignment="textStart"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BtnDecremen"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@id/TvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/BtnIncremen"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/Btncountinune"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Add To Cart"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>